@section scripts
{
    <script src="~/resources/libraries/Busqueda.js?v=@DateTime.Now.Second.ToString()"></script>
    <script type="text/javascript">

        $(".btn-busqueda").click(function () {
            Busqueda.ToList_Detenido();
        });

        $("#table-result-detenido").on("click", "tr td .btn-datos", function () {

            Cargar_ReporteDetenido($(this).attr("data-index"));

        });


    </script>
}
