
@{
    ViewBag.Title = "Index";
}

<h2>Busqueda Especifica de Detenido</h2>

<div class="row">
    <div class="col-md-3">
        <select class="form-control" id="busqueda-tipo" required>
            <option value="">SELECCIONE</option>
            <option value="1">NOMBRE COMPLETO</option>
            <option value="2">IDENTIFICACION</option>
        </select>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <div class="input-group">
                <input type="text" class="form-control" id="busqueda-descripcion" required />
                <span class="input-group-btn">
                    <button type="button" class="btn btn-info btn-busqueda"><i class="icon-search1"></i></button>
                </span>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <table class="table DataTable" id="listBusNombre">
            <thead>

                <tr>
                    <th>Foto</th>
                    <th> Nombre Completo </th>
                    <th> Identificación</th>
                    <th> Fecha Detencion </th>
                    <th><i class="icon-android-share-alt"></i></th>
                </tr>

            </thead>
            <tbody id="table-result-detenido"></tbody>
        </table>


    </div>
